<div class="container-fluid">
  <div class="row mt-5">
    <div class="col-md-4 col-sm-7 mx-auto login-section">
      <h2 class="text-center">Login Now</h2>
      <form class="login-form" action="/login" method="POST">
        <div class="form-group">
          <label for="email" class="text-uppercase">Email</label>
          <input type="email" class="form-control" placeholder="" id="email" name="email" value={{email}}>
          <span class="invalid-feedback"></span>
        </div>
        <div class="form-group">
          <label for="password" class="text-uppercase">Password</label>
          <input type="password" class="form-control" placeholder="" id="password" name="password" value={{password}}>
          <span class="invalid-feedback"></span>
        </div>
        {{#if error}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong>Error!</strong> {{error/message}}
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        {{/if}}
        <div class="form-group">
          <button type="submit" class="form-control btn btn-primary text-uppercase btn-login">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
